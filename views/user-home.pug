
link(rel='stylesheet' href='/stylesheets/user-home.css')
script(src="/javascripts/user-home.js" type="module" defer)


div(id="container")
    include navbar.pug

    div(id="lists" class="main-body-div")
        a(href="/" id="home-img"): img(src="/images/homeCow.png", alt="Home" id="cow-img")
        div(id="list-display-div")
            div(id="all-tasks-div") All Tasks
            div(id="lists-label-div") Lists:

    div(id="current-list" class="main-body-div")
        include task-form
        //- include task-list
        div(id="incomplete-task-div")
        div(id="complete-task-div")

    div(id="summary" class="main-body-div")
        div(class="task-detail-container")
            div(class="body-container")
                a(href="#" class="btn-close") &#8592; All Tasks

                div(class="list-info")
                    span(class="label-name")
                    span(class="list-content")
                div(id="user-edit")
                    input(type="text" id="editing")
                    button(type="submit" id="edit-button") Edit

        div(id="list-title") All Tasks
        div(id="task-summary-container")
            div(class="inner-summary-container")
                p(class="task-num" id="tasks-sum") 0
                p tasks
            div(class="inner-summary-container")
                p(class="task-num" id="completed-sum") 0
                p completed
