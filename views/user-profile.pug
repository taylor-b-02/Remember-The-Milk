link(rel="stylesheet" href="/stylesheets/profile.css")
link(rel='stylesheet' href='/stylesheets/user-home.css')

include navbar.pug
div(id= "profile-container")
    a(href=`/users/${user.id}` id="home-img"): img(src="/images/homeCow.png" id="cow-image")
    img(id="profilePic" src='../images/cowMilk.png')
    table(class='table table-striped table-hover')
        thead(class='thead-dark')
            tr
                th(scope='row') Username
                td= user.userName
            tr
                th(scope='row') Email
                td= user.email
            tr
                th(scope='row') Birthday
                td= formattedBirthday
            tbody
div(id= "edit-btn-container")
    a(class="edit-button" class="btn-edit" href=`/users/${user.id}/profile/edit` role="button") Edit Profile
    a(class='edit-button' href=`/users/${user.id}/edit-password` role='button') Change Password
